@model PrjCs_Sprint_1_Login_et_Register.Models.Cours

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <meta name="viewport" content="width=device-width" />
    <title>Creation_Cours</title>
</head>
<body>
    <center>
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link" href="/Enseignant/Menu">Menu</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Enseignant/Ajout_Video">Ajouter une Video</a>
            </li>
            <li class="nav-item">
                <a class="nav-link  active" aria-current="page" href="/Enseignant/Creation_Cours">Creer un Cours</a>
            </li>

        </ul>

        <h1>Creer un Cours E-Learning</h1><br />
         <br /><br />

        @using (Html.BeginForm("Creation_Cours", "Enseignant", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" name="file" placeholder="Choisir une image"  accept="image/*"/><br />

            <input type="text" name="Titre" value=@Model.Titre placeholder=" le Titre du Cour" /><br />

            <input type="text" name="Num_Cours" value= @Model.Num_Cours placeholder=" le Numero du Cour" /><br />

            <input type="text" name="Description" value=@Model.Description placeholder=" la Description du Cour" /><br />

            <input type="number" name="Prix" value=@Model.Prix placeholder=" le Prix du Cour" /><br />

            <select class="form-select" name="NiveauEducation" required>

                <option selected disabled value="">Niveau d'education</option>

                @foreach (var niveau in ViewBag.ModelNiveauEducation)
                {
                    <option value=@niveau.Id>@niveau.Symboles</option>
                }

            </select>
            <input type="submit" value="Creer" />
        }
    </center>
</body>
</html>
