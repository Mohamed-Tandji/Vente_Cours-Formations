
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>Menu</title>
</head>
<body>
    
    <center>
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/Enseignant/Menu">Menu</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Enseignant/Ajout_Video">Ajouter une Video</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Enseignant/Creation_Cours">Creer un Cours</a>
            </li>

        </ul>


        <h1>Menu E-Learning</h1>  <br />
        <h3 style="color:brown">@ViewBag.msg</h3>
        <h3 style="color:green">@ViewBag.msgb</h3>
        <br /><br /><br />

        <div class="container text-center">
            <div class="row row-cols-2 row-cols-lg-4 g-2 g-lg-3">
                @foreach (var cours in ViewBag.ModelCours)
                {

                    <div class="card mb-3 mx-3" style="width: 18rem;">
                        <img src="~/@cours.Url" width="60" height="130" class="card-img-top" alt="Cours1">
                        <div class="card-body">
                            <h5 class="card-title">@cours.Titre </h5>
                            <h6 class="card-subtitle mb-2 text-body-secondary">@cours.Prix $</h6>
                            <p class="card-text">@cours.Description</p>
                            <a href="#" class="btn btn-primary">S'inscrire</a>
                        </div>
                    </div>
                }



            </div>
        </div>
        


    </center>
</body>
</html>
