@model PrjCs_Sprint_1_Login_et_Register.Models.Videos

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <meta name="viewport" content="width=device-width" />
    <title>Ajout_Cours</title>
</head>
<body>
  
    <center>
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link" href="/Enseignant/Menu">Menu</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/Enseignant/Ajout_Video">Ajouter une Video</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Enseignant/Creation_Cours">Creer un Cours</a>
            </li>

        </ul>

        <h1>Ajouter une Video E-Learning</h1>

        @using (Html.BeginForm("Ajout_Video", "Enseignant", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <label for="validationDefault04" class="form-label">Video</label><br />

            <input type="file" name="fileUrl" accept="video/*" /> <br />

            <label for="validationDefault04" class="form-label">Image Video</label><br />

            <input type="file" name="fileImage" placeholder="Choisir l'image de la Video" /><br />
            <input type="text" name="Titre" value=@Model.Titre /><br />
            <input type="text" name="Description" value=@Model.Description /><br />


            <select class="form-select" name="Cours" required>

                <option selected disabled value="">Cours</option>
                @foreach (var cour in ViewBag.ModelCours)
                {
                    <option value=@cour.Id>@cour.Titre</option>
                }

            </select>

      
            <input type="submit" value="Ajouter" />
        }
    </center>
  
</body>
</html>
