@model PrjCs_Sprint_1_Login_et_Register.Models.Enseignant


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Register</title>
</head>
<body>

    <center>
        <h1>Register Teacher  E-Learning</h1>
        <br /><a style="color: darkolivegreen; background-color: papayawhip; border-color: white" href="/Enseignant/Register">Un Etudiant?</a>
       <br />
        <br />

        <form style="padding-top:10%" action="/Enseignant/Register" method="post" class="row g-3">
            <div class="col-md-4">
                <label for="validationDefault01" class="form-label">Nom</label>
                <input type="text" class="form-control" name="Nom" placeholder="Entrer votre Nom" value=@Model.Nom required>
            </div>
            <div class="col-md-4">
                <label for="validationDefault02" class="form-label">Prenom</label>
                <input type="text" class="form-control" name="Prenom" placeholder="Entrer votre Prenom" value=@Model.Prenom required>
            </div>
            <div class="col-md-4">
                <label for="validationDefault02" class="form-label">Email</label>
                <input type="email" class="form-control" name="Email" placeholder="Entrer votre courriel" value=@Model.Email required>
            </div>

            <div class="col-md-3">
                <label for="validationDefault04" class="form-label">Niveau d'education</label>
                <select class="form-select" name="NiveauEducation" required>

                    <option selected disabled value="">Niveau d'education</option>

                    @foreach (var niveau in ViewBag.ModelNiveauEducation)
                    {
                        <option value=@niveau.Id>@niveau.Symboles</option>
                    }

                </select>
            </div>

            <div class="col-12">
                <button class="btn btn-primary" type="submit" id="Enregistrer"> Enregistrer</button>
                <button class="btn btn-danger" type="reset" id="Effacer">Effacer</button>

            </div>
        </form>
    </center>





</body>
</html>
