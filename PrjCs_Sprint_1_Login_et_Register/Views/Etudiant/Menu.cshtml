
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>Menu</title>
</head>
<body>
    
    <center>

        <ul class="nav nav-pills">
            <li class="nav-item mx-2 me-8">
                <a class="nav-link active" aria-current="page" href="/Etudiant/Menu">Menu</a>
            </li>

            <li class="nav-item mx-2">
                <a class="nav-link" href="/Etudiant/Mes_Cours">Mes Cours </a>

            <li class="nav-item mx-2">
                <a class="nav-link" href="/Etudiant/Compte">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664z" />
                    </svg>
                </a>
            </li>
            <li class="nav-item mx-2">
                <a class="nav-link" href="/Etudiant/Login">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-toggle2-on" viewBox="0 0 16 16">
                        <path d="M7 5H3a3 3 0 0 0 0 6h4a4.995 4.995 0 0 1-.584-1H3a2 2 0 1 1 0-4h3.416c.156-.357.352-.692.584-1" />
                        <path d="M16 8A5 5 0 1 1 6 8a5 5 0 0 1 10 0" />
                    </svg>
                </a>
            </li>
        </ul>


        <h1>Menu Eleves E-Learning</h1><br /><br /><br />

        <h3 style="color:brown">@ViewBag.Message</h3>
        <br /><br /><br />

        <div class="container text-center">
            <div class="row row-cols-2 row-cols-lg-4 g-2 g-lg-3">
                @foreach (var cours in ViewBag.ModelCours)
                {

                    <div class="card mb-3 mx-3" style="width: 18rem;">
                        <img src="~/@cours.Url" width="60" height="130" class="card-img-top" alt="Cours1">
                        <div class="card-body">
                            <h5 class="card-title">@cours.Titre </h5>
                            <h6 class="card-subtitle mb-2 text-body-secondary">@cours.Prix $</h6>
                            <p class="card-text">@cours.Description</p>
                            <a href="/Etudiant/Cours?Id=@cours.Id" class="btn btn-primary">S'inscrire</a>
                        </div>
                    </div>
                }



            </div>
        </div>


    </center>
        



      

    
</body>                        

</html>
