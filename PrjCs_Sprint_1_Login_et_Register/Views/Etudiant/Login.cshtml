@model PrjCs_Sprint_1_Login_et_Register.Models.Logine



@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Login</title>
</head>
<body>
  
    <center>

        <h1>Login Student E-Learning</h1>
        <br />
        <a style="color: darkolivegreen; background-color: gray; border-color: white" href="/Enseignant/Login">Un Enseignant?</a>

        <h3 style="color:brown">@ViewBag.Message</h3>

        <form style="padding-top:10%" method="post" action="/Etudiant/Login">
            <div class="mb-3">
                <label class="form-label">Nom Utilisateur</label>
                <input type="text" class="form-control" name="UserName" placeholder="Entrer votre Username" value=@Model.UserName aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label id="password" placeholder="Entrer votre Password" class="form-label">Password</label>
                <input type="password" class="form-control" name="Password" value=@Model.Password>
            </div>

            <button type="submit" id="Envoyer" class="btn btn-primary">Connexion</button>

            <a style="color: mediumspringgreen; background-color: white; border-color: white" href="/Etudiant/Register">S'inscrire?</a>
        </form>
    </center>




   
</body>
</html>
